extends /layouts/basic_layout

block topbar
  include /includes/topbar
  +topbar(user_answer)
  a(href="/admin") 管理画面トップ
  |>
  a(href="/admin/questions") 質問xコトダマ

block basic_content
  include /includes/answerScale
  h1 質問一覧

  - var sorted_questions = questions.sort((a,b)=>a.dev_rate - b.dev_rate)

  each question in sorted_questions


    table.n(style="margin-bottom:0;")
      tr
        td(style="width:20%") #{question.id}:
        td(style="width:60%;text-align:center;margin-bottom:0")= question.left + " < = >  " +  question.right
        td

    - var ave = question.ave_rate;
    - var dev = question.dev_rate;
    - var data = question.data_rate;
    +answerScale(ave, dev, null, null, data)

