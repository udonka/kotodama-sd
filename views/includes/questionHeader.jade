mixin questionHeader(question)
  if question
    table.n(id="#{question.id}" style="margin-bottom:0;")
      tr
        td(style="width:20%") #{question.id}:
        td(style="width:25%;text-align:right;")
          a.n(href="/admin/questions/ave-of-ave##{question.id}")= question.left 

        td(style="width:10%;text-align:center;")  -
        td(style="width:25%;text-align:left;")
          a.n(href="/admin/questions/ave-of-ave##{question.id}")= question.right
        td(style="width:20%") 
    
